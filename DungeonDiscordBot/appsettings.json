{
    "Serilog": 
    {
        "MinimumLevel": "Verbose",
        "Enrich": ["FromLogContext"],
        "WriteTo": [
            { 
                "Name": "Console",
                "Args": {
                    "formatter": {
                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                        "template": "[{@t:yyyy-MM-dd HH:mm:ss} {@l:u3} {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}"
                    }
                }
            }
        ]
    },
    "AllowedHosts": "*"
}